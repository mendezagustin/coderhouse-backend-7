<!DOCTYPE html>
<html lang="en">

<body class="main">
  <div class="container">
    <div class="row justify-content-md-center" id="row-form">
      
      <div class="col-md-10">
          <h1>Lista de productos</h1>
          <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  {{#if listExists}}
  <tbody>
      {{#each productos}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.title}}</td>
      <td>{{this.price}}</td>
    </tr>
    {{/each}}
  </tbody>
{{/if}}
</table>

      </div>
    </div> 
  </div>
	
</body>
</html>
